{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>  {% if  category.image is not null %}
                <img src="{{ asset(category.image) }}" alt="Image">
                    {% else %}
                        Aucune image disponible
                    {% endif %}</td>
            </tr>
            <tr>
                <th>Date_creation</th>
                <td>{{ category.dateCreation ? category.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_update</th>
                <td>{{ category.dateUpdate ? category.dateUpdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ category.status }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ category.sexe }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_category_index') }}">Retour Ã  la liste</a>

    <a href="{{ path('app_category_edit', {'id': category.id}) }}">Modif</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
