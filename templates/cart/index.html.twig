{% extends 'base.html.twig' %}

{% block title %}Mon Panier-La boutique Tunisienne {% endblock %}

{% block content %}
<h1>Mon panier</h1>
<p>Retrouvez l'ensmble des parfums que vous ajoute a votre panier.</p>
<hr>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Parfum</th>
      <th scope="col">Quantity</th>
      <th scope="col">Prix</th>
      <th scope="col">Total</th>
      <th scope="col">Action</th>


    </tr>
  </thead>
  <tbody>
  {% for element in data %}
  <tr>
  <td>{{element.parfum.nom}}</td>
  <td>{{element.parfum.prix }}</td>
  <td>{{element.quantite}}</td>
    <td>{{element.quantite * element.parfum. prix}}</td>
    <td>
    <a href="{{ path('cart-add',{id:element.parfum.id}) }}" class="btn btn-success" >+</a>
    <a href="{{ path('cart_remove',{id:element.parfum.id}) }}" class="btn btn-warning" >-</a>
    <a href="{{ path('cart_delete',{id:element.parfum.id}) }}" class="btn btn-danger" >supprimer</a>

    
    </td>

  </tr>
  {% else  %}
  <tr>
  <tr colspan="5" >votre panier est vide </td>
  </tr>
  {% endfor %}

  </tbody>
</table>
<div class="text-right mb-5">
<b>Nombre de parfum:</b>{{ panier|length }}<br/>
<b> Total de mon panier :</b>{{ total }}Dt
<a href="" class="btn btn-success btn-block mt-3">Valider mon panier</a>
<a href="{{ path('cart_empty',{id:element.parfum.id}) }}" class="btn btn-danger">Vider</a>
</div>


{% endblock %}
